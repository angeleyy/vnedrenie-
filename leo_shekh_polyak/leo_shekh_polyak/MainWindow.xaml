<Window x:Class="leo_shekh_polyak.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WPF Chat" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="chatHistoryListBox" Margin="10" Grid.Row="0" SelectionChanged="chatHistoryListBox_SelectionChanged"/>
        <TextBox x:Name="messageTextBox" Margin="10" Grid.Row="1" TextChanged="messageTextBox_TextChanged"/>
        <Button x:Name="sendButton" Content="Send" Margin="10" Grid.Row="1" HorizontalAlignment="Right" Width="100" Click="sendButton_Click_1"/>
    </Grid>
</Window>